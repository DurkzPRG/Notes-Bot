generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id        String           @id
  createdAt DateTime         @default(now())
  pages     Page[]
  perms     PermissionRule[]
}

model Page {
  id           String                   @id @default(cuid())
  workspaceId  String
  title        String
  slug         String
  contentMd    String                   @default("")
  version      Int                      @default(1)
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt
  searchVector Unsupported("tsvector")?

  workspace Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  versions  PageVersion[]
  perms     PermissionRule[]

  @@unique([workspaceId, slug], name: "workspaceId_slug")
  @@index([workspaceId, title])
  @@index([workspaceId, updatedAt])
}

model PageVersion {
  id        String   @id @default(cuid())
  pageId    String
  version   Int
  title     String
  slug      String
  contentMd String
  authorId  String?
  createdAt DateTime @default(now())

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([pageId, version], name: "pageId_version")
  @@index([pageId, createdAt])
}

model PermissionRule {
  id          String   @id @default(cuid())
  workspaceId String
  pageId      String?
  roleId      String
  channelId   String?
  canRead     Boolean  @default(true)
  canWrite    Boolean  @default(false)
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  page      Page?     @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([workspaceId, pageId])
  @@index([workspaceId, roleId])
  @@index([workspaceId, channelId])
}
